<%= form_with(model: @teacher, local: true) do |form| %>
  <% if @teacher.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@teacher.errors.count, "error") %> prohibited this teacher from being saved:</h2>

      <ul>
        <% @teacher.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :lastname, style: "display: block" %>
    <%= form.text_field :lastname %>
  </div>

  <div class="field">
    <%= form.label :firstname, style: "display: block" %>
    <%= form.text_field :firstname %>
  </div>

  <div class="field">
    <%= form.label :email, style: "display: block" %>
    <%= form.email_field :email %>
  </div>

  <div class="field">
    <%= form.label :phone_number, style: "display: block" %>
    <%= form.text_field :phone_number %>
  </div>

  <div class="field">
    <%= form.label :iban, style: "display: block" %>
    <%= form.text_field :iban %>
  </div>

  <div class="field">
    <%= form.label :subject_ids, "Subjects", style: "display: block" %>
    <%= form.collection_select :subject_ids, Subject.all, :id, :name, 
        { prompt: "Select subjects" }, 
        { multiple: true, class: "multiple-select" } %>
  </div>

  <div class="field">
    <%= form.label :password, style: "display: block" %>
    <%= form.password_field :password %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation, style: "display: block" %>
    <%= form.password_field :password_confirmation %>
  </div>

  <div class="actions">
    <%= form.submit class: "button" %>
  </div>
<% end %> 