<div id="<%= dom_id school_class %>">
  <p>
    <strong>Name:</strong>
    <%= school_class.name %>
  </p>

  <p>
    <strong>Grade:</strong>
    <%= school_class.grade %>
  </p>

  <p>
    <strong>Year:</strong>
    <%= school_class.year %>
  </p>

  <p>
    <strong>Teacher:</strong>
    <%= "#{school_class.teacher.firstname} #{school_class.teacher.lastname}" %>
  </p>

  <div class="students-list">
    <h3>Students in this class:</h3>
    <% if school_class.students.any? %>
      <table>
        <thead>
          <tr>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Email</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% school_class.students.order(:lastname, :firstname).each do |student| %>
            <tr>
              <td><%= student.lastname %></td>
              <td><%= student.firstname %></td>
              <td><%= student.email %></td>
              <td><%= student.status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>No students enrolled in this class yet.</p>
    <% end %>
  </div>
</div>
