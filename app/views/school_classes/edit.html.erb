<% content_for :title, "Edit School Class: #{@school_class.name}" %>

<div class="space-y-6">
  <div class="flex justify-between items-center">
    <h1 class="text-2xl font-bold">Edit School Class: <%= @school_class.name %></h1>
    <div class="flex space-x-2">
      <%= render 'shared/button', 
        text: "View Details", 
        icon: "fa-solid fa-eye",
        color: "outline-blue", 
        href: school_class_path(@school_class) %>
        
      <%= render 'shared/button', 
        text: "Back to School Classes", 
        icon: "fa-solid fa-arrow-left",
        color: "outline-gray", 
        href: school_classes_path %>
    </div>
  </div>

  <%= render "form", school_class: @school_class %>
</div>
