<% content_for :title, "School Class: #{@school_class.name}" %>

<div class="space-y-6">
  <div class="flex justify-between items-center">
    <h1 class="text-2xl font-bold">School Class: <%= @school_class.name %></h1>
    <div class="flex space-x-2">
      <% if current_person.is_a?(Dean) %>
        <%= render 'shared/button', 
          text: "Edit", 
          icon: "fa-solid fa-pencil",
          color: "outline-blue", 
          href: edit_school_class_path(@school_class) %>
          
        <%= render 'shared/button', 
          text: "Delete", 
          icon: "fa-solid fa-trash",
          color: "red", 
          method: :delete,
          confirm: "Are you sure you want to delete this school class?",
          href: school_class_path(@school_class) %>
      <% end %>
      
      <%= render 'shared/button', 
        text: "Back to School Classes", 
        icon: "fa-solid fa-arrow-left",
        color: "outline-gray", 
        href: school_classes_path %>
    </div>
  </div>

  <%= render @school_class %>
</div>
