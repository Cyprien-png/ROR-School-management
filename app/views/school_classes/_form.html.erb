<%= form_with(model: school_class) do |form| %>
  <% if school_class.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(school_class.errors.count, "error") %> prohibited this school_class from being saved:</h2>

      <ul>
        <% school_class.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :grade, style: "display: block" %>
    <%= form.number_field :grade %>
  </div>

  <div>
    <%= form.label :year_id, "Academic Year", style: "display: block" %>
    <%= form.collection_select :year_id, Year.all, :id, ->(year) { 
      "#{year.first_trimester.start_date.year}-#{year.fourth_trimester.end_date.year}"
    }, { prompt: "Select an academic year" } %>
  </div>

  <div>
    <%= form.label :teacher_id, "Teacher", style: "display: block" %>
    <%= form.collection_select :teacher_id, Teacher.all, :id, ->(teacher) { "#{teacher.firstname} #{teacher.lastname}" }, { prompt: "Select a teacher" } %>
  </div>

  <div>
    <%= form.submit class: "button" %>
  </div>
<% end %>
