<% content_for :title, "Edit Examination: #{@examination.title}" %>

<div class="space-y-6">
  <div class="flex justify-between items-center">
    <h1 class="text-2xl font-bold">Edit Examination: <%= @examination.title %></h1>
    <div class="flex space-x-2">
      <%= render 'shared/button', 
        text: "View Details", 
        icon: "fa-solid fa-eye",
        color: "outline-yellow", 
        href: examination_path(@examination) %>
        
      <%= render 'shared/button', 
        text: "Back to Examinations", 
        icon: "fa-solid fa-arrow-left",
        color: "outline-gray", 
        href: examinations_path %>
    </div>
  </div>

  <%= render "form", examination: @examination %>
</div>
