<% content_for :title, "Examination Details" %>

<div class="space-y-6">
  <div class="flex justify-between items-center">
    <h1 class="text-2xl font-bold">Examination Details</h1>
    <div class="flex space-x-2">
      <% if current_person.is_a?(Dean) || (current_person.is_a?(Teacher) && current_person.id == @examination.lecture.teacher_id) %>
        <%= render 'shared/button', 
          text: "Edit", 
          icon: "fa-solid fa-pencil",
          color: "outline-yellow", 
          href: edit_examination_path(@examination) %>
          
        <%= render 'shared/button', 
          text: "Delete", 
          icon: "fa-solid fa-trash",
          color: "red", 
          method: :delete,
          confirm: "Are you sure you want to delete this examination?",
          href: examination_path(@examination) %>
      <% end %>
      
      <%= render 'shared/button', 
        text: "Back to Examinations", 
        icon: "fa-solid fa-arrow-left",
        color: "outline-gray", 
        href: examinations_path %>
    </div>
  </div>

  <%= render @examination %>
</div>
