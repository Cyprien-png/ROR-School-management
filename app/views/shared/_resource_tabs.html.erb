<%# 
  Reusable tabs component for resource index pages
  Usage:
  render 'shared/resource_tabs', 
    active_tab: :active, # Options: :active, :deleted
    active_path: resource_path, # Path for active resources
    deleted_path: deleted_resource_path # Path for deleted resources
%>

<% 
  # Set default values
  active_tab = local_assigns.fetch(:active_tab, :active)
%>

<% if current_person.is_a?(Dean) %>
  <div class="mb-6">
    <div class="border-b border-gray-200">
      <nav class="-mb-px flex space-x-8" aria-label="Tabs">
        <%= link_to local_assigns[:active_path], class: "#{active_tab == :active ? 'border-indigo-500 text-indigo-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'} whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm" do %>
          Active
        <% end %>
        
        <%= link_to local_assigns[:deleted_path], class: "#{active_tab == :deleted ? 'border-indigo-500 text-indigo-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'} whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm" do %>
          Deleted
        <% end %>
      </nav>
    </div>
  </div>
<% end %> 