<% content_for :title, "Edit Grade" %>

<div class="space-y-6">
  <div class="flex justify-between items-center">
    <h1 class="text-2xl font-bold">Edit Grade</h1>
    <div class="flex space-x-2">
      <%= render 'shared/button', 
        text: "View Details", 
        icon: "fa-solid fa-eye",
        color: "outline-red", 
        href: grade_path(@grade) %>
        
      <%= render 'shared/button', 
        text: "Back to Grades", 
        icon: "fa-solid fa-arrow-left",
        color: "outline-gray", 
        href: grades_path %>
    </div>
  </div>

  <%= render "form", grade: @grade %>
</div>
