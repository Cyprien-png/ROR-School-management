<% content_for :title, "Edit Lecture" %>

<div class="space-y-6">
  <div class="flex justify-between items-center">
    <h1 class="text-2xl font-bold">Edit Lecture</h1>
    <div class="flex space-x-2">
      <%= render 'shared/button', 
        text: "View Details", 
        icon: "fa-solid fa-eye",
        color: "outline-green", 
        href: lecture_path(@lecture) %>
        
      <%= render 'shared/button', 
        text: "Back to Lectures", 
        icon: "fa-solid fa-arrow-left",
        color: "outline-gray", 
        href: lectures_path %>
    </div>
  </div>

  <%= render "form", lecture: @lecture %>
</div>
