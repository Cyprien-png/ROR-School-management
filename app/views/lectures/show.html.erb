<% content_for :title, "Lecture Details" %>

<div class="space-y-6">
  <div class="flex justify-between items-center">
    <h1 class="text-2xl font-bold">Lecture Details</h1>
    <div class="flex space-x-2">
      <% if current_person.is_a?(Dean) || (current_person.is_a?(Teacher) && current_person.id == @lecture.teacher_id) %>
        <%= render 'shared/button', 
          text: "Edit", 
          icon: "fa-solid fa-pencil",
          color: "outline-green", 
          href: edit_lecture_path(@lecture) %>
          
        <%= render 'shared/button', 
          text: "Delete", 
          icon: "fa-solid fa-trash",
          color: "red", 
          method: :delete,
          confirm: "Are you sure you want to delete this lecture?",
          href: lecture_path(@lecture) %>
      <% end %>
      
      <%= render 'shared/button', 
        text: "Back to Lectures", 
        icon: "fa-solid fa-arrow-left",
        color: "outline-gray", 
        href: lectures_path %>
    </div>
  </div>

  <%= render @lecture %>
</div>
