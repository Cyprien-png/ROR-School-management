<% content_for :title, "Edit Academic Year" %>

<div class="space-y-6">
  <div class="flex justify-between items-center">
    <h1 class="text-2xl font-bold">Edit Academic Year</h1>
    <div class="flex space-x-2">
      <%= render 'shared/button', 
        text: "View Details", 
        icon: "fa-solid fa-eye",
        color: "outline-indigo", 
        href: year_path(@year) %>
        
      <%= render 'shared/button', 
        text: "Back to Years", 
        icon: "fa-solid fa-arrow-left",
        color: "outline-gray", 
        href: years_path %>
    </div>
  </div>

  <%= render "form", year: @year %>
</div>
