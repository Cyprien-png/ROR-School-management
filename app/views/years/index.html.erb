<p style="color: green"><%= notice %></p>

<% content_for :title, "Academic Years" %>

<div class="space-y-6">
  <div class="flex justify-between items-center">
    <h1 class="text-2xl font-bold">Academic Years</h1>
    <% if current_person.is_a?(Dean) %>
      <%= render 'shared/button', 
        text: "New Academic Year", 
        icon: "fa-solid fa-plus",
        color: "indigo", 
        href: new_year_path %>
    <% end %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @years.each do |year| %>
      <% next if year.isDeleted %>
      <%= render 'shared/card', 
        title: "#{year.first_trimester.start_date.year}-#{year.fourth_trimester.end_date.year}", 
        color: "indigo", 
        icon: "fa-solid fa-calendar-days",
        content: capture do %>
        <div class="space-y-4">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div class="bg-indigo-50 p-3 rounded-lg">
              <h4 class="font-medium text-indigo-800 mb-2">First Trimester</h4>
              <p class="text-sm text-gray-600">
                <span class="font-medium">Start:</span> <%= year.first_trimester.start_date.strftime("%B %d, %Y") %>
              </p>
              <p class="text-sm text-gray-600">
                <span class="font-medium">End:</span> <%= year.first_trimester.end_date.strftime("%B %d, %Y") %>
              </p>
            </div>
            
            <div class="bg-indigo-50 p-3 rounded-lg">
              <h4 class="font-medium text-indigo-800 mb-2">Second Trimester</h4>
              <p class="text-sm text-gray-600">
                <span class="font-medium">Start:</span> <%= year.second_trimester.start_date.strftime("%B %d, %Y") %>
              </p>
              <p class="text-sm text-gray-600">
                <span class="font-medium">End:</span> <%= year.second_trimester.end_date.strftime("%B %d, %Y") %>
              </p>
            </div>
            
            <div class="bg-indigo-50 p-3 rounded-lg">
              <h4 class="font-medium text-indigo-800 mb-2">Third Trimester</h4>
              <p class="text-sm text-gray-600">
                <span class="font-medium">Start:</span> <%= year.third_trimester.start_date.strftime("%B %d, %Y") %>
              </p>
              <p class="text-sm text-gray-600">
                <span class="font-medium">End:</span> <%= year.third_trimester.end_date.strftime("%B %d, %Y") %>
              </p>
            </div>
            
            <div class="bg-indigo-50 p-3 rounded-lg">
              <h4 class="font-medium text-indigo-800 mb-2">Fourth Trimester</h4>
              <p class="text-sm text-gray-600">
                <span class="font-medium">Start:</span> <%= year.fourth_trimester.start_date.strftime("%B %d, %Y") %>
              </p>
              <p class="text-sm text-gray-600">
                <span class="font-medium">End:</span> <%= year.fourth_trimester.end_date.strftime("%B %d, %Y") %>
              </p>
            </div>
          </div>
          
          <div class="pt-3 border-t border-gray-200 flex justify-end space-x-2">
            <%= render 'shared/button', 
              text: "View", 
              icon: "fa-solid fa-eye",
              color: "outline-indigo", 
              size: "sm",
              href: year_path(year) %>
              
            <% if current_person.is_a?(Dean) %>
              <%= render 'shared/button', 
                text: "Edit", 
                icon: "fa-solid fa-pencil",
                color: "outline-indigo", 
                size: "sm",
                href: edit_year_path(year) %>
                
              <%= render 'shared/button', 
                text: "Delete", 
                icon: "fa-solid fa-trash",
                color: "outline-red", 
                size: "sm",
                method: :delete,
                confirm: "Are you sure you want to delete this academic year?",
                href: year_path(year) %>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
