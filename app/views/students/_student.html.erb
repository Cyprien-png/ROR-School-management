<div id="<%= dom_id student %>">
  <p>
    <strong>Last Name:</strong>
    <%= student.lastname %>
  </p>

  <p>
    <strong>First Name:</strong>
    <%= student.firstname %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= student.email %>
  </p>

  <p>
    <strong>Phone Number:</strong>
    <%= student.phone_number %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= student.status %>
  </p>

  <% if current_person.is_a?(Dean) %>
    <div class="actions mt-4">
      <%= link_to "Edit this student", edit_student_path(student), class: "button" %>
    </div>
  <% end %>
</div>